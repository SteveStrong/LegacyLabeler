@page "/document-browser"
@inject DocumentService DocumentService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Document Browser</PageTitle>

<h3>Document Browser</h3>

<div class="row">
    <div class="col-md-12">
        <button class="btn btn-primary mb-3" @onclick="ScanDocuments">
            <i class="bi bi-arrow-clockwise"></i> Scan Documents Folder
        </button>
        
        @if (isLoading)
        {
            <div class="text-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p>Scanning documents...</p>
            </div>
        }
        else if (documents.Any())
        {
            <div class="alert alert-info">
                Found @documents.Count documents in the Documents folder
            </div>
            
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Filename</th>
                            <th>Type</th>
                            <th>Size</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in documents)
                        {
                            <tr>
                                <td>@doc.OriginalFilename</td>
                                <td>@doc.FileType.ToUpper()</td>
                                <td>@FormatFileSize(doc.FileSize)</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(doc.Status)">
                                        @doc.Status
                                    </span>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-success" @onclick="() => StartReview(doc.Id)">
                                        Review
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else if (!isLoading)
        {
            <div class="alert alert-warning">
                <h5>No documents found!</h5>
                <p>Please add some PDF, JPG, PNG, or TIFF files to the <code>Documents</code> folder and click "Scan Documents Folder".</p>
            </div>
        }
    </div>
</div>